pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/noambenm/Skubestore-devops.git']]])
            }
        }
        stage('Deploy to k8s') {
            steps {
                dir(path: 'running_the_app') {
                    sh 'chmod +x deploy_all_manifests.sh'
                    sh './deploy_all_manifests.sh'
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up workspace'
            cleanWs()
        }
        success {
            echo 'Deployment to k8s succeeded'
        }
        failure {
            echo 'Deployment to k8s failed'
        }
    }
}
